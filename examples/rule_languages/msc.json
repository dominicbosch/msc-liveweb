{
  "event": "mail",
  "conditions": [
    { "sender": "sender@mail.com" },
  ],
  "actions": [
    {
      "api": "probinder",
      "method": "call",
      "arguments": {
        "service": "27",
        "method": "save",
        "data": {
          "companyId": "961",
          "context": "17930",
          "text": "$X.subject"
        }
      }
    }
  ]
}

function call(args) {
  require('needle').post(
    'https://probinder.com/service/' + args.service + '/' + args.method,
    args.data,
    args.credentials
  );
};

on unread
