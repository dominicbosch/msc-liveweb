[
  {
    "id": "rule_0",
    "event": "mail",
    "condition": {},
    "actions": [
      {
        "type": "webapicall",
        "apiprovider": "probinder",
        "method": "makeEntry"
      }
    ]
  },
  {
    "id": "rule_1",
    "event": "mail",
    "condition": {},
    "actions": [
      {
        "type": "webapicall",
        "apiprovider": "probinder",
        "method": "makeEntry",
        "arguments": {
          "content": "Rule#1: $X.subject" 
        }
      }
    ]
  },
  {
    "id": "rule_2",
    "event": "mail",
    "condition": { "sender": "sender2"},
    "actions": [
      {
        "type": "webapicall",
        "apiprovider": "probinder",
        "method": "makeEntry",
        "arguments": {
          "content": "Rule#2: $X.textbody"
        }
      }
    ]
  },
  {
    "id": "rule_emailyak",
    "event": "yakmail",
    "condition": { "FromAddress": "dominic.bosch.db@gmail.com"},
    "actions": [
      {
        "type": "webapicall",
        "apiprovider": "probinder",
        "method": "makeEntry",
        "arguments": {
          "content": "Received from EmailYak: $X.textbody"
        }
      }
    ]
  },
  {
    "id": "rule_robert",
    "event": "newfile",
    "condition": { "serviceId": "32"},
    "actions": [
      {
        "type": "webapicall",
        "apiprovider": "probinder",
        "method": "makeRobertEntry",
        "arguments": {
          "id": "$X.id",
          "content": "New file ($X.title) in tab '$X.context[0][name]', find it <a href=\"https://probinder.com/binder/content/view/id/$X.id\">here</a>!"
        }
      }
    ]
  }
]